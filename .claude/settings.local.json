{
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(bun:*)",
      "Bash(bunx:*)",
      "Bash(git:*)",
      "Bash(docker:*)",
      "WebSearch"
    ],
    "deny": [
      "Read(./**/.env)",
      "Read(./**/.env.*)",
      "Read(./**/credentials.json)",
      "Read(./**/service-account-key.json)",
      "Read(*.csv)",
      "Read(*.log)",
      "Read(*.pem)",
      "Read(*.key)",
      "Read(./**/*.lock*)",
      "Read(.git/)",
      "Read(.idea/)",
      "Read(.vscode/)",
      "Read(./**/build/)",
      "Read(./**/dist/)",
      "Read(./**/out/)",
      "Read(./**/node_modules/)",
      "Read(./**/venv/)",
      "Read(./**/__pycache__/)",
      "Read(./**/coverage/)",
      "Read(./**/consensus*.md)",
      "Read(./**/review*.md)"
    ],
    "ask": []
  },
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": 64000,
    "MAX_MCP_OUTPUT_TOKENS": 64000
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/validate-bash.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash $CLAUDE_PROJECT_DIR/.claude/scripts/statusline.sh"
  }
}

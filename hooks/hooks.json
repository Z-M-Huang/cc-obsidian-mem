{
  "hooks": [
    {
      "event": "SessionStart",
      "commands": [
        {
          "command": "bun run ${PLUGIN_ROOT}/hooks/scripts/session-start.ts",
          "timeout": 30000
        }
      ]
    },
    {
      "event": "PostToolUse",
      "matcher": {
        "tool_name": "Write|Edit|MultiEdit|Bash"
      },
      "commands": [
        {
          "command": "bun run ${PLUGIN_ROOT}/hooks/scripts/post-tool-use.ts",
          "timeout": 10000
        }
      ]
    },
    {
      "event": "Stop",
      "commands": [
        {
          "command": "bun run ${PLUGIN_ROOT}/hooks/scripts/session-end.ts --type=stop",
          "timeout": 60000
        }
      ]
    },
    {
      "event": "SessionEnd",
      "commands": [
        {
          "command": "bun run ${PLUGIN_ROOT}/hooks/scripts/session-end.ts --type=end",
          "timeout": 60000
        }
      ]
    }
  ]
}
